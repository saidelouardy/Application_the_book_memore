<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prancipale.MainActivity"
    android:orientation="vertical"
    android:background="#957209B7"
    >
    <TextView
        android:id="@+id/textstart"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/framelayoutstartactivity"
        android:text="STRAT"
        android:textStyle="italic"
        android:paddingStart="35dp"
        android:textSize="49dp"
        android:paddingTop="30dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="626dp"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/linearlayoutstartactivity"
        >
        <TextView
            android:id="@+id/firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frist name :"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_alignStart="@+id/editfirstname"
            />
        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/editfirstname"
            android:layout_width="match_parent"
            android:layout_below="@id/firstname"
            android:layout_height="70dp"
            android:layout_marginVertical="22dp"
            android:textSize="23dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/baseline_person_24"
            android:paddingStart="15dp"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:hint="enter your name"
            />
        <TextView
            android:layout_below="@+id/editfirstname"
            android:id="@+id/lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name :"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_alignStart="@+id/editfirstname"
            />
        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/editlastname"
            android:layout_width="match_parent"
            android:layout_below="@id/lastname"
            android:layout_height="70dp"
            android:layout_marginVertical="20dp"
            android:textSize="23dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/baseline_person_24"
            android:paddingStart="15dp"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:hint="enter your name"
            />
            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/buttonlogoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editlastname"
                android:background="@drawable/edittext"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:text="logo in "
                android:textSize="30dp"/>

        <TextView
            android:layout_marginVertical="15dp"
            android:id="@+id/visite"
            android:layout_below="@+id/buttonlogoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="visite me in "
            android:layout_centerHorizontal="true"
            android:textSize="35dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/visite"
            android:layout_alignStart="@id/visite"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="5dp"
                app:cardElevation="30dp">
                <ImageView
                    android:id="@+id/google"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/go"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="30dp"
                >
                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/facebook"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginHorizontal="25dp"
                app:cardElevation="30dp"
                >
                <ImageView
                    android:id="@+id/youtob"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/youtob"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>